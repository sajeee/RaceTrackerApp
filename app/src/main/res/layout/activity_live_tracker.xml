<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/liveTrackerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/strava_gray_bg"
    tools:context=".LiveTrackerActivity">

    <!-- ðŸŒ FULLSCREEN MAP -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- ðŸ•’ SEMI-TRANSPARENT TIMER BAR -->
    <LinearLayout
        android:id="@+id/timerBar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_top_blur"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:elevation="12dp">

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/strava_orange_dark" />
    </LinearLayout>

    <!-- â¤ï¸ HEALTH METRICS â€” MINI CARD FLOATING -->
    <LinearLayout
        android:id="@+id/healthMetricsCard"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center"
        android:background="@drawable/bg_card_float"
        android:layout_below="@id/timerBar"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="14dp">

        <!-- HEART RATE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:text="Heart Rate"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:alpha="0.6" />

            <TextView
                android:id="@+id/heart_rate_text"
                android:text="-- bpm"
                android:textColor="@color/strava_orange_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- DIVIDER -->
        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:background="@color/white"
            android:alpha="0.25" />

        <!-- CADENCE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:text="Cadence"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:alpha="0.6" />

            <TextView
                android:id="@+id/cadence_text"
                android:text="-- spm"
                android:textColor="@color/strava_orange_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸ“Š FLOATING BOTTOM STATS CARD -->
    <LinearLayout
        android:id="@+id/statsCard"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_bottom_blur"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="18dp"
        android:paddingTop="12dp"
        android:elevation="16dp">

        <!-- DISTANCE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:text="Distance"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:alpha="0.6" />

            <TextView
                android:id="@+id/distance_text"
                android:text="0.00 km"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:alpha="0.25" />

        <!-- SPEED -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:text="Speed"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:alpha="0.6" />

            <TextView
                android:id="@+id/textSpeed"
                android:text="0.00 km/h"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:alpha="0.25" />

        <!-- PACE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:text="Pace"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:alpha="0.6" />

            <TextView
                android:id="@+id/pace_text"
                android:text="0:00 /km"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸŸ¢ FLOATING CIRCULAR BUTTONS -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:spacing="10dp">

        <!-- START -->
        <Button
            android:id="@+id/start_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_circle_orange"
            android:text="â–¶"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:elevation="14dp" />

        <!-- PAUSE -->
        <Button
            android:id="@+id/pause_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_circle_dark"
            android:text="â¸"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:enabled="false"
            android:alpha="0.6"
            android:layout_marginStart="14dp" />

        <!-- STOP -->
        <Button
            android:id="@+id/stop_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_circle_red"
            android:text="â¹"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:enabled="false"
            android:alpha="0.6"
            android:layout_marginStart="14dp" />
    </LinearLayout>

    <!-- ðŸ† SUMMARY OVERLAY -->
    <LinearLayout
        android:id="@+id/summaryCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="24dp"
        android:orientation="vertical"
        android:background="#B3000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/bg_card_float"
            android:elevation="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSummaryTitle"
                android:text="Activity Summary"
                android:textColor="@color/strava_orange_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <TextView android:id="@+id/textSummaryDistance" android:textSize="16sp" android:textColor="@color/white"/>
            <TextView android:id="@+id/textSummaryPace" android:textSize="16sp" android:textColor="@color/white"/>
            <TextView android:id="@+id/textSummarySpeed" android:textSize="16sp" android:textColor="@color/white"/>
            <TextView android:id="@+id/textSummaryElevation" android:textSize="16sp" android:textColor="@color/white"/>
            <TextView android:id="@+id/textSummaryDuration" android:textSize="16sp" android:textColor="@color/white"/>
            <TextView android:id="@+id/textSummaryHeartRate" android:textSize="16sp" android:textColor="@color/white"/>
            <TextView android:id="@+id/textSummaryCadence" android:textSize="16sp" android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnShareSummary"
                android:text="Share"
                android:textColor="@color/white"
                android:layout_marginTop="14dp"
                android:backgroundTint="@color/strava_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
