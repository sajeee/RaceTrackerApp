<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/liveTrackerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/strava_gray_bg"
    tools:context=".LiveTrackerActivity">

    <!-- ðŸŒ MAP IN BACKGROUND -->
     <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/statsCard"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:layout_marginBottom="10dp" />

    <!-- â±ï¸ TIMERDISPLAY ON TOP CENTER -->
    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/strava_orange_dark"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_timer_blur"
        android:padding="8dp"
        android:elevation="12dp" />

    <!-- ðŸ’“ HEALTH METRICS CARD (Heart Rate & Cadence) -->
    <LinearLayout
        android:id="@+id/healthMetricsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center"
        android:background="@drawable/bg_card_blur"
        android:layout_above="@id/statsCard"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â¤ï¸ Heart Rate"
                android:textSize="12sp"
                android:textColor="@color/strava_text_dark"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/heart_rate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- bpm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/strava_orange_dark"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/strava_text_dark"
            android:alpha="0.2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸƒ Cadence"
                android:textSize="12sp"
                android:textColor="@color/strava_text_dark"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/cadence_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- spm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/strava_orange_dark"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸ“Š STATS CARD (Distance, Speed, Pace) -->
    <LinearLayout
        android:id="@+id/statsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center"
        android:background="@drawable/bg_card_blur"
        android:layout_above="@id/buttonRow"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ Distance"
                android:textSize="11sp"
                android:textColor="@color/strava_text_dark"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 km"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/strava_text_dark"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš¡ Speed"
                android:textSize="11sp"
                android:textColor="@color/strava_text_dark"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/textSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 km/h"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/strava_text_dark"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â± Pace"
                android:textSize="11sp"
                android:textColor="@color/strava_text_dark"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/pace_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00 /km"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/strava_text_dark"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸŸ¢ START / PAUSE / STOP BUTTONS -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:padding="8dp">

        <Button
            android:id="@+id/start_button"
            android:text="â–¶ Start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/strava_orange"
            android:layout_marginEnd="6dp"
            android:elevation="8dp" />

        <Button
            android:id="@+id/pause_button"
            android:text="â¸ Pause"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/strava_orange_dark"
            android:layout_marginEnd="6dp"
            android:elevation="8dp"
            android:enabled="false"
            android:alpha="0.6" />

        <Button
            android:id="@+id/stop_button"
            android:text="â¹ Stop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#D32F2F"
            android:elevation="8dp"
            android:enabled="false"
            android:alpha="0.6" />
    </LinearLayout>

    <!-- ðŸ“¸ SUMMARY OVERLAY -->
    <LinearLayout
        android:id="@+id/summaryCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="#B3000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card_blur"
            android:elevation="10dp">

            <TextView
                android:id="@+id/textSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ† Activity Summary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/strava_orange_dark"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textSummaryDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance: 0.00 km"
                android:textSize="16sp"
                android:textColor="@color/strava_text_dark"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textSummaryPace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pace: 0 min/km"
                android:textSize="16sp"
                android:textColor="@color/strava_text_dark"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textSummarySpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speed: 0 km/h"
                android:textSize="16sp"
                android:textColor="@color/strava_text_dark"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textSummaryElevation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elevation Gain: 0 m"
                android:textSize="16sp"
                android:textColor="@color/strava_text_dark"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textSummaryDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration: 00:00:00"
                android:textSize="16sp"
                android:textColor="@color/strava_text_dark"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textSummaryHeartRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avg Heart Rate: -- bpm"
                android:textSize="16sp"
                android:textColor="@color/strava_text_dark"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textSummaryCadence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avg Cadence: -- spm"
                android:textSize="16sp"
                android:textColor="@color/strava_text_dark"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnShareSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¤ Share"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/strava_orange" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
