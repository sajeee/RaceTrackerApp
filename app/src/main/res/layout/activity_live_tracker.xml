<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/liveTrackerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/strava_gray_bg"
    tools:context=".LiveTrackerActivity">

    <!-- ðŸŒ MAP IN BACKGROUND -->
    <fragment
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/statsCard"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:layout_marginBottom="10dp" />

    <!-- â±ï¸ TIMER DISPLAY ON TOP CENTER -->
    <TextView
        android:id="@+id/textTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/strava_orange_dark"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_timer_blur"
        android:padding="8dp"
        android:elevation="12dp" />

    <!-- ðŸ“Š STATS CARD (BOTTOM) -->
    <LinearLayout
        android:id="@+id/statsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center"
        android:background="@drawable/bg_card_blur"
        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textDistance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ðŸ 0.00 km"
            android:textSize="16sp"
            android:textColor="@color/strava_text_dark"
            android:gravity="center" />

        <TextView
            android:id="@+id/textSpeed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="âš¡ 0.00 km/h"
            android:textSize="16sp"
            android:textColor="@color/strava_text_dark"
            android:gravity="center" />

        <TextView
            android:id="@+id/textPace"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="â± 0:00"
            android:textSize="16sp"
            android:textColor="@color/strava_text_dark"
            android:gravity="center" />
    </LinearLayout>

    <!-- ðŸŸ¢ START / STOP BUTTONS ABOVE STATS -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@id/statsCard"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnStart"
            android:text="â–¶ Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/strava_orange"
            android:padding="12dp"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btnStop"
            android:text="â¹ Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/strava_orange_dark"
            android:padding="12dp" />
    </LinearLayout>
<!-- ðŸ“¸ SUMMARY OVERLAY -->
<LinearLayout
    android:id="@+id/summaryCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#B3000000"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_card_blur"
        android:elevation="10dp">

        <TextView
            android:id="@+id/textSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ† Activity Summary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/strava_orange_dark"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/textSummaryDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance: 0.00 km"
            android:textSize="16sp"
            android:textColor="@color/strava_text_dark"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textSummaryPace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pace: 0 min/km"
            android:textSize="16sp"
            android:textColor="@color/strava_text_dark"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textSummarySpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speed: 0 km/h"
            android:textSize="16sp"
            android:textColor="@color/strava_text_dark"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textSummaryElevation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elevation Gain: 0 m"
            android:textSize="16sp"
            android:textColor="@color/strava_text_dark"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textSummaryDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: 00:00:00"
            android:textSize="16sp"
            android:textColor="@color/strava_text_dark"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btnShareSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¤ Share"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/strava_orange" />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
